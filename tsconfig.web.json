{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/**/*.ts",
    "src/renderer/**/*.vue",
    "src/preload/*.d.ts",
    "@intlify/unplugin-vue-i18n/messages"
  ],
  "compilerOptions": {
    "lib": ["ES2023", "WebWorker", "DOM"],
    "composite": true,
    "baseUrl": ".",
    "paths": {
        "@renderer/*": [
            "src/renderer/src/*"
        ],
        "~/*": [
            "node_modules/*"
        ]
    },
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
}
